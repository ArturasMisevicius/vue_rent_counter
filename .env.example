APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost
DEBUGBAR_ENABLED=true
DEBUGBAR_STORAGE_DRIVER=file
DEBUGBAR_STORAGE_PATH=/storage/debugbar
DEBUGBAR_INJECT=true

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_EXPIRE_ON_CLOSE=false

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Security & Rate Limiting
THROTTLE_REQUESTS=60
THROTTLE_DECAY_MINUTES=1
THROTTLE_TENANT_MANAGEMENT_REQUESTS=30
THROTTLE_TENANT_MANAGEMENT_DECAY=1
THROTTLE_BULK_REQUESTS=10
THROTTLE_BULK_DECAY=1

# Security Monitoring
SECURITY_ALERT_EMAIL=security@example.com
AUDIT_LOG_RETENTION_DAYS=90

# Authentication
AUTH_PASSWORD_TIMEOUT=10800

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Security Headers
SECURITY_X_FRAME_OPTIONS=SAMEORIGIN
SECURITY_REFERRER_POLICY=strict-origin-when-cross-origin
SECURITY_PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"
SECURITY_HSTS_ENABLED=false  # Set to true in production with valid SSL

# Content Security Policy (CSP)
SECURITY_CSP_ENABLED=true
SECURITY_CSP_REPORT_ONLY=false  # Set to true for testing
SECURITY_CSP_REPORT_URI=  # Optional: endpoint for CSP violation reports

# Rate Limiting (Security-Sensitive Operations)
SECURITY_INVOICE_FINALIZATION_ATTEMPTS=10
SECURITY_INVOICE_FINALIZATION_DECAY=1
SECURITY_LOGIN_ATTEMPTS=5
SECURITY_LOGIN_DECAY=1
SECURITY_PASSWORD_RESET_ATTEMPTS=3
SECURITY_PASSWORD_RESET_DECAY=1

# Audit Logging
SECURITY_AUDIT_LOGGING_ENABLED=true
SECURITY_AUDIT_LOG_CHANNEL=stack

# Session Security
SECURITY_SESSION_TIMEOUT_WARNING=5  # Minutes before session expiry

# Demo Mode (Disable in production)
SECURITY_DEMO_MODE_ENABLED=false

# ============================================================================
# PRODUCTION SECURITY CHECKLIST
# ============================================================================
# Before deploying to production, ensure:
# - APP_DEBUG=false
# - APP_ENV=production
# - SESSION_SECURE_COOKIE=true
# - SECURITY_HSTS_ENABLED=true
# - SECURITY_CSP_ENABLED=true
# - SECURITY_AUDIT_LOGGING_ENABLED=true
# - SECURITY_DEMO_MODE_ENABLED=false
# - Valid SSL certificate installed
# - Firewall rules configured
# - Database backups enabled
# - Log monitoring active
# ============================================================================

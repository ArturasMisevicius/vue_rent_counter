# Security Configuration Example
# Copy relevant settings to your .env file

# ============================================
# APPLICATION SECURITY
# ============================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-production-domain.com

# ============================================
# SESSION SECURITY
# ============================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_EXPIRE_ON_CLOSE=true
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ============================================
# AUTHENTICATION RATE LIMITING
# ============================================
THROTTLE_LOGIN_MAX_ATTEMPTS=5
THROTTLE_LOGIN_DECAY_MINUTES=1
THROTTLE_REGISTER_MAX_ATTEMPTS=3
THROTTLE_REGISTER_DECAY_MINUTES=60
THROTTLE_PASSWORD_RESET_MAX_ATTEMPTS=3
THROTTLE_PASSWORD_RESET_DECAY_MINUTES=60

# ============================================
# API RATE LIMITING
# ============================================
THROTTLE_API_MAX_ATTEMPTS=60
THROTTLE_API_DECAY_MINUTES=1

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null
LOG_SLACK_WEBHOOK_URL=

# ============================================
# SECURITY HEADERS
# ============================================
# Configured in app/Http/Middleware/SecurityHeaders.php
# No environment variables needed

# ============================================
# CSRF PROTECTION
# ============================================
# Enabled by default via VerifyCsrfToken middleware
# No environment variables needed

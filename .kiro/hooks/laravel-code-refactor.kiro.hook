{
  "enabled": true,
  "name": "Laravel Code Refactoring Assistant",
  "description": "Analyzes Laravel/PHP files for code smells and modernizes them with project conventions (Laravel 12, Filament v4, strict types).",
  "version": "2.0",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "app/**/*.php"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": ""
  },
  "workspaceFolderName": "laravel",
  "shortName": "laravel-code-refactor"
}